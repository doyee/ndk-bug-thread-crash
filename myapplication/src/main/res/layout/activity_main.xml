<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/test_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start Test" />


    <Button
        android:id="@+id/bat_start_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start-Stop 1000 times"
        app:layout_constraintTop_toTopOf="@+id/test_button"
        app:layout_constraintLeft_toRightOf="@+id/test_button" />

    <TextView
        android:id="@+id/text_progress"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:text="TextView"
        app:layout_constraintTop_toTopOf="@+id/bat_start_stop"
        app:layout_constraintLeft_toRightOf="@+id/bat_start_stop" />

</android.support.constraint.ConstraintLayout>